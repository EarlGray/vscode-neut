{
  "name": "vscode-neut",
  "description": "A VSCode extension to support the Neut programming language and its LSP",
  "author": "Dmytro S",
  "license": "ISC",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EarlGray/vscode-neut.git"
  },
  "keywords": [
    "lsp",
    "language",
    "vscode",
    "extension"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onLanguage:neut"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Neut-vscode",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "max number of LSP problems"
        }
      }
    }
  },
  "main": "./client/out/extention",
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ..",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/EarlGray/vscode-neut/issues"
  },
  "homepage": "https://github.com/EarlGray/vscode-neut#readme",
  "devDependencies": {
    "@types/node": "^20.4.10",
    "typescript": "^5.1.6"
  }
}
