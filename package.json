{
  "name": "vscode-neut",
  "displayName": "Neut Language",
  "description": "A VSCode extension to support the Neut programming language and its LSP",
  "author": "Dmytro S",
  "publisher": "dmytrish",
  "license": "ISC",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EarlGray/vscode-neut.git"
  },
  "keywords": [
    "lsp",
    "language",
    "vscode",
    "extension"
  ],
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onLanguage:neut",
    "workspaceContains:module.ens"
  ],
  "contributes": {
    "languages": [
      {
        "id": "neut",
        "extensions": [
          "nt",
          "neut"
        ]
      }
    ],
    "commands": []
  },
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile && npm prune --production",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/EarlGray/vscode-neut/issues"
  },
  "homepage": "https://github.com/EarlGray/vscode-neut#readme",
  "devDependencies": {
    "@types/node": "^20.4.10",
    "typescript": "^5.1.6"
  }
}
